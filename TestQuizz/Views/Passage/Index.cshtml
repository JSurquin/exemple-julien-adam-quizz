@model TestQuizz.Models.PassageViewModel

@{
    ViewData["Title"] = "Index";
}

<h4>Quizz @Model.QuizzName</h4>
<h3>Questions @Model.NumeroCourant / @Model.TotalQuestions</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" asp-route-id="@Model.QuizzId" asp-route-questionId="@Model.QuestionId">
            @foreach(var reponse in Model.Reponses)
            {
                <div class="form-group">
                    <input type="checkbox" name="@reponse.Id" checked="@reponse.IsCheched">
                    <label for="@reponse.Id" class="control-label">@reponse.Content</label>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Suivant" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
